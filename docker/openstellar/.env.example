# Docker Compose 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# ============================================================================
# 中间件版本配置
# ============================================================================

# PostgreSQL 配置
POSTGRES_USER=spark
POSTGRES_PASSWORD=spark123
POSTGRES_PORT=5432

# MySQL 配置
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=spark
MYSQL_PASSWORD=spark123
MYSQL_PORT=3306

# Redis 配置
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password  # 可选，启用认证时取消注释

# Elasticsearch 配置
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
ELASTICSEARCH_SECURITY_ENABLED=false
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Kafka 配置
KAFKA_PORT=9092
KAFKA_REPLICATION_FACTOR=1
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk

# MinIO 配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DEFAULT_BUCKET=knowledge

# ============================================================================
# OpenStellar 应用配置
# ============================================================================

# 核心服务端口配置
CORE_TENANT_PORT=8001
CORE_MEMORY_PORT=8002
CORE_RPA_PORT=8003
CORE_LINK_PORT=8004
CORE_AITOOLS_PORT=8005
CORE_AGENT_PORT=8006
CORE_KNOWLEDGE_PORT=8007
CORE_WORKFLOW_PORT=8008

# 控制台服务端口配置
CONSOLE_FRONTEND_PORT=3000
CONSOLE_HUB_PORT=8080
CONSOLE_TOOLKIT_PORT=8081

# ============================================================================
# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=60

# 网络配置
NETWORK_SUBNET=172.20.0.0/16

